@model project5.Models.salary

@{
    ViewBag.Title = "Index";
}
<html>
<head>

</head>
<body> 
   
    <h2 style="color:tomato;">Employee salary calculation system  </h2>
    <style>
        body
        {
            background-color:#ffd800
        }
    </style>
    <form>
        <fieldset style="padding-top=50;">
            <div class="card-body">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <br />
                    <br />
                    &nbsp;&nbsp;&nbsp;
                    @Html.LabelFor(m => m.empname)
                    @Html.TextBoxFor(m => m.empname, "", new { @class = "form-control", @placeholder = "empname" })
                </div>
                <div class="form.group">
                    @Html.LabelFor(m => m.bsal)
                    @Html.TextBoxFor(m => m.bsal, "", new { @class = "form-control", @placeholder = "bsal" })
                </div>
                <div class="form.group">
                    @Html.LabelFor(m => m.Tax)
                    @Html.TextBoxFor(m => m.Tax, "", new { @class = "form-control", @placeholder = "Tax" })
                </div>
                <div class="form.group">
                    @Html.LabelFor(m => m.Netsal)
                    @Html.TextBoxFor(m => m.Netsal, "", new { @class = "form-control", @placeholder = "Netsal"})
                </div>
           </div>
            </fieldset>
</form>
    <div colspan="2">
    <button type="submit" class="btn btn-info" id="add" value="add">submit</button>
        </div>
</body>
</html>


