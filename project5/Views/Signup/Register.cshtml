@model Mvcproject.Models.User

@{
    ViewBag.Title = "Register";
}
<head>
    <title>Register </title>
</head>
<style>
    body {
        background-color: #ff00dc 
    }
</style>
<div class="header">
    <h1>SIGNUPFORM</h1>
</div>
<div class="container">
    <br />
    @using (Html.BeginForm())
    {
        <table class="table">
            <form>
                <fieldset style="padding-top=50;">
                    <div class="card-body">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <br />
                            <br />
                            &nbsp;&nbsp;&nbsp;
                 @Html.LabelFor(m => m.Name)
                 @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control", @placeholder = "Name" })
                        </div>
                        <div class="form-group">
                            &nbsp;&nbsp;&nbsp;
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                        </div>
                        <div class="form-group">
                            &nbsp;&nbsp;&nbsp;
    @Html.LabelFor(m => m.Createpassword)
@Html.TextBoxFor(m => m.Createpassword, "", new { @class = "form-control", @placeholder = "Createpassword" })
                      </div>
                   <div class="form-group">
                         &nbsp;&nbsp;&nbsp;
       @Html.LabelFor(m => m.Mobilenumber)
        @Html.TextBoxFor(m => m.Mobilenumber, new { @class = "form-control", @placeholder = "Mobilenumber" })
                           </div>
            <div colspan="2">
                @Html.CheckBox("accept")Accept all terms and conditions
                <input type="submit" value="SignUp" class="btn btn-default" />
            </div>
            <div>
                <input type="reset" value="Reset" />

            </div>
          </div>
        </fieldset>
                </form>
        </table>
    }
</div>

