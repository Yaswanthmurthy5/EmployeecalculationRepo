@model Mvcproject.Models.Login
@{
    ViewBag.Title = "Login";
}
<style>
    header{
        padding: 60px;
        text-align: center;
        background: #1abc9c;
        color: white
    }
body
{
 background-color:#ca8d8d
}
</style>
<div class="header">
    <h1>LOGIN FORM </h1>
</div>
<div class="container">
@using (Html.BeginForm())
{
    <table class="table">
        <form>
           <fieldset style="padding-top=50;">
           <div class="card-body"> 
               @Html.AntiForgeryToken()
               <div class="form-group">
                   <br/>
                   <br/>
                   &nbsp;&nbsp;&nbsp;
                   @Html.LabelFor(m => m.Username)
                   @Html.TextBoxFor(m => m.Username, "", new { @class = "form-control", @placeholder = "Username" })
                   @Html.ValidationMessageFor(m => m.Username, "", new { @class = "badge badge-danger" })
               </div>
               <div class="form-group">
                   &nbsp;&nbsp;&nbsp;
                   @Html.LabelFor(m => m.Password)
                   @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                   @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
               </div>
               <div colspan="2">
                   <input type="submit" name="submit" class="btn btn-primary" value="Login" />
</div>
                </div>
            </fieldset>
      </form>
    </table>
    
}
</div>




